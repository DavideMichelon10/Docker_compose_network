acl "trusted" {
	192.168.1.0/24;
	192.168.1.1;
	192.168.1.2;
	192.168.1.100;
	192.168.1.101;
	192.168.1.102;
	192.168.1.103;
	192.168.1.104;
	192.168.1.105;
	192.168.1.106;
	192.168.1.107;
	192.168.1.108;
};

options {
	directory "/var/cache/bind";
	recursion yes;
	allow-recursion {trusted; };
	listen-on {192.168.1.100; };
	allow-transfer {none; };

	forwarders {
	#	8.8.8.8;
	#	8.8.4.4;
	};

	dnssec-validation auto;

	listen-on-v6 { any; };
};

